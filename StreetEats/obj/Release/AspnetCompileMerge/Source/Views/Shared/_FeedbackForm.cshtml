<div class="container-box feedbackContainer rotated">
    <button type="button" class="btn btn-info btn-lg turned-button feedbackButton" data-toggle="modal">Feedback</button>
</div>

<!-- Modal -->
<div id="feedbackModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header feedbackHeader">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h3 class="modal-title">Feedback</h3>
            </div>
            <div class="modal-body feedbackBody">
                <form role="form" method="post" id="feedbackForm" data-request-url="@Url.Action("AjaxFeedbackForm", "Weddings")">
                    <h4 class="formExplain">
                        Already been a customer of ours? <br />
                        We would love to hear from you.
                    </h4>
                    <div class="form-group">
                        <div class="nameIcon">
                            <span class="glyphicon glyphicon-user"></span>
                        </div>
                        <input type="text" class="form-control" id="name" name="name" required maxlength="50" placeholder="Full Name">
                    </div>
                    <div class="form-group">
                        <div class="emailIcon">
                            <span class="glyphicon glyphicon-envelope feedback"></span>
                        </div>
                        <input type="email" class="form-control"
                               id="email" name="email" required maxlength="50" placeholder="Email Address">
                    </div>
                    <div class="form-group">
                        <div class="categoryIcon">
                            <span class="glyphicon glyphicon-cutlery"></span>
                        </div>
                        <input type="text" class="form-control"
                               id="feedbackCategory" name="feedbackCategory" required maxlength="50" placeholder="Feedback Category e.g. Wedding, Corporate Event">
                    </div>
                    <div class="form-group">
                        <div class="feedbackIcon">
                            <span class="glyphicon glyphicon-bullhorn feedback"></span>
                        </div>
                        <div class="dropdown">
                            <select name="useFeedback" class="c-form-profession form-control" id="c-form-profession">
                                <option value="Use your feedback...">Can we use your feedback? (on our website)</option>
                                <option value="Yes">Yes</option>
                                <option value="No">No</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="feedbackTextIcon">
                            <span class="glyphicon glyphicon-comment"></span>
                        </div>
                        <textarea class="form-control" type="textarea" name="message"
                                  id="message" placeholder="Your Message Here"
                                  maxlength="6000" rows="7"></textarea>
                        @{
                            var controllerName = ViewContext.RouteData.Values["controller"].ToString();
                            <input type="hidden" name="subject" id="HiddenText" value="feedback" placeholder="Your Feedback" />
                        }
                    </div>
                    <button class="btn btn-lg btn-success btn-block" id="btnFeedback">Post It! →</button>
                </form>
                <div id="feedBackSuccessMessage" style="width:100%; height:100%; display:none; ">
                    <h3>Sent your message successfully!</h3>
                </div>
                <div id="feedbackErrorMessage"
                     style="width:100%; height:100%; display:none; ">
                    <h3>Error</h3>
                    Sorry there was an error sending your form.
                </div>
            </div>
        </div>
    </div>
</div>

