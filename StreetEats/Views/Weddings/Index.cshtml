@model List<StreetEats.Models.Weddings>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_weddingLayout.cshtml";
}
<div id="weddingCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#weddingCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#weddingCarousel" data-slide-to="1"></li>
        <li data-target="#weddingCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner weddingCarouselInner">
        @foreach (var item in Model)
        {
            string activeClass = "";
            if (@item.startingPage == "true")
            {
                activeClass = "active";
            }
            <div class="item weddingMenu @activeClass">
                <h1 class="weddingMenu">@item.header</h1>
                @foreach (var food in item.fileLocations)
                {
                    <img src ="@food" class="weddingMenuPics"/>
                }
            </div>
        }
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#weddingCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#weddingCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>