@model StreetEats.Models.Weddings

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_weddingLayout.cshtml";
}
<div id="weddingCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#weddingCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#weddingCarousel" data-slide-to="1"></li>
        <li data-target="#weddingCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            @{
                string originalFileName = Model.menuFrontPage;
                string fileName = originalFileName.Substring(originalFileName.LastIndexOf('-') + 1);
                <img src="@originalFileName" alt="@fileName" class="img-responsive">
            }
        </div>
        @foreach (var item in Model.MenuPage)
        {
            string pageName = @item.Substring(@item.LastIndexOf('-') + 1);
            <div class="item">
                <img src="@item" alt="@pageName" class="img-responsive">
            </div>
        }
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#weddingCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#weddingCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
@section SideBar{
    <p>This is a sidebar</p>
    }