@model StreetEats.Models.Gallery

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="GalleryTitle" class="pageTitles">
    <h1>Gallery</h1>
</div>
<div>
    <div class="container gallery-container topContainer">
        <div class="tz-gallery">
            <div class="row">

                @foreach (var fileName in Model.allPictures)
                {
                    <div class="col-sm-6 col-md-4">
                        <a class="lightbox" href="@fileName">
                            <img src="@fileName" alt="Bridge">
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>