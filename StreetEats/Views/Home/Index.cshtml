@model StreetEats.Models.Home

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/bundle/css/home")
<div class="homeRow">
    <div class="homeFirst homeColumn">
        <div id="indexCarousel">
            <!-- carousel code -->
            <div id="carouselExampleIndicators" class="carousel slide" data-interval="6000">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner skyblue">

                    <!-- first slide -->
                    <div class="item active skyblue firstSlide">
                        <div class="carousel-caption d-md-block fPCarouselCaption">
                            <h3 class="icon-container" data-animation="animated bounceInDown">
                                <span class="fa fa-heart"></span>
                            </h3>
                            <h3 data-animation="animated bounceInUp">
                                Weddings
                            </h3>
                            <button class="btn btn-primary btn-lg fPCarouselBtn" data-animation="animated zoomInUp">@Html.ActionLink("Find Out More", "Index", "Weddings", null, new { id = "weddingLink" }) </button>
                        </div>
                    </div>

                    <!-- second slide -->
                    <div class="item skyblue secondSlide">
                        <div class="carousel-caption d-md-block fPCarouselCaption">
                            <h3 class="icon-container" data-animation="animated bounceInDown">
                                <span class="fa fa-building"></span>
                            </h3>
                            <h3 data-animation="animated bounceInUp">
                                Corporate
                            </h3>
                            <button class="btn btn-primary btn-lg fPCarouselBtn" data-animation="animated zoomInUp">@Html.ActionLink("Find Out More", "Index", "Corporate", null, new { id = "corporateLink" }) </button>
                        </div>
                    </div>

                    <!-- third slide -->
                    <div class="item skyblue thirdSlide">
                        <div class="carousel-caption d-md-block fPCarouselCaption">
                            <h3 class="icon-container" data-animation="animated zoomInLeft">
                                <span class="fa fa-cutlery"></span>
                            </h3>
                            <h3 data-animation="animated bounceInUp">
                                Market
                            </h3>
                            <button class="btn btn-primary btn-lg fPCarouselBtn" data-animation="animated zoomInUp">@Html.ActionLink("Find Out More", "Index", "Market", null, new { id = "marketLink" })</button>
                        </div>
                    </div>
                </div>

                <!-- controls -->
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>
    </div>
    <div class="homeMiddle homeColumn">
        <div class="middle">
            <div class="hireUsRow mainHireUsRow">
                <div class="hireUsColumn">
                    <h3>@Model.hireUsTitle</h3>
                    @foreach (var item in Model.hireUsText)
                    {
                        @item
                    }

                    <div class="hireUsButton">
                        <button class="btn btn-primary btn-lg showMore" data-animation="animated zoomInUp" id="aboutUsButton">@Html.ActionLink("Get to know us", "Index", "About", null, new { id = "aboutLink" }) </button>
                    </div>
                </div>
                <div class="hireUsColumn">
                    <div class=hireUsRow>
                        <div class="hireUsColumn imageColumn">
                            <img src="~/Content/images/home/homeMiddle.jpg" style="width:100%"/>
                        </div>
                        <div class="hireUsColumn imageColumn">
                            <img src="~/Content/images/home/homeMiddle2.jpg" style="width:100%" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </div>
<div class="homeLast homeColumn" id="homeTestimonies">

    <div class="hireUsRow mainHireUsRow">

        <div class="hireUsColumn">
            <h3>@Model.homeThirdColumn</h3>

            @foreach (var item in Model.testimonyText)
            {
                <p>"@item"</p>
            }

            <div class="hireUsButton">
                <button class="btn btn-primary btn-lg showMore" data-animation="animated zoomInUp" id="aboutUsButton">@Html.ActionLink("Read More", "Index", "testimonies", null, new { id = "testimoniesLink" }) </button>
            </div>
        </div>

        <div class="hireUsColumn">
            <div class=hireUsRow>
                <div class="hireUsColumn imageColumn">
                    <img src="~/Content/images/home/homeLast.jpg" style="width:100%" />
                </div>
                <div class="hireUsColumn imageColumn">
                    <img src="~/Content/images/home/homeLast2.jpg" style="width:100%" />
                </div>
            </div>
        </div>

    </div>
</div>
